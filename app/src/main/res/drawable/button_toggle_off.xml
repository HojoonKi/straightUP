<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer shadow/ring -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#2A2A2A" />
            <size android:width="200dp" android:height="200dp" />
        </shape>
    </item>
    
    <!-- Inner darker ring -->
    <item android:top="8dp" android:bottom="8dp" android:left="8dp" android:right="8dp">
        <shape android:shape="oval">
            <solid android:color="#1A1A1A" />
            <stroke android:width="2dp" android:color="#404040" />
        </shape>
    </item>
    
    <!-- Button face -->
    <item android:top="16dp" android:bottom="16dp" android:left="16dp" android:right="16dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="100"
                android:centerColor="#3A3A3A"
                android:endColor="#2A2A2A" />
            <stroke android:width="1dp" android:color="#505050" />
        </shape>
    </item>
</layer-list>
